<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="8dp"
              tools:ignore="MissingDefaultResource">
    <!--<include layout="@layout/activity_login_title"/>-->
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/login_linear_margin"
        android:layout_marginRight="@dimen/login_linear_margin">
        <!--logo-->
        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_logo_margin_top"/>
        <EditText
            android:id="@+id/user_et"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:drawablePadding="@dimen/login_edit_padding"
            android:layout_marginTop="@dimen/login_user_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/login_user_icon"
            android:hint="@string/login_user_hint"
            android:textSize="@dimen/text_size_42"
            android:singleLine="true"
            android:background="@null"/>
        <View
            android:layout_marginTop="@dimen/login_divede_line_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/login_password_margin_top">
            <EditText
                android:id="@+id/password_et"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:drawablePadding="@dimen/login_edit_padding"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/login_password_icon"
                android:hint="@string/login_password_hint"
                android:background="@null"
                android:textSize="@dimen/text_size_42"
                android:singleLine="true"
                android:inputType="textPassword"/>
            <CheckBox
                android:id="@+id/password_cb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/checkbox_password_bg"/>
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/login_divede_line_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/login_bt"
            android:textSize="@dimen/text_size_42"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/login_btn_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_button_off"
            android:text="@string/login_label"/>
    </LinearLayout>
</RelativeLayout>