<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <include layout="@layout/time_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <!--端口-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/port_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/port_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/port_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="端口"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/port_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SZCIMA.GD"
                    android:textColor="@color/lightGreen" />
            </LinearLayout>
        </LinearLayout>

        <!--ip-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ip_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/ip_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.168.0.1"
                    android:textColor="@color/lightGreen" />
            </LinearLayout>
        </LinearLayout>

        <!--压力-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pressure_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@mipmap/pressure" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pressure_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="压力"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pressure_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2MPa"
                    android:textColor="@color/lightGreen" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>